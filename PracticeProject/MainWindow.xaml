<Window x:Class="PracticeProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeProject"
        mc:Ignorable="d"
        Title="School LEARN" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="362*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FF04A0FF"/>
        <Image Source="/Resources/school_logo.png" HorizontalAlignment="Left"/>
        <TextBlock x:Name="TitleTb" Text="School LEARN"></TextBlock>
        <Button HorizontalAlignment="Right" Margin="85 0" x:Name="BackBtn" Click="BackBtn_Click">Назад</Button>
        <Button HorizontalAlignment="Right" Margin="10 0" x:Name="ExitBtn" Click="ExitBtn_Click">Выход</Button>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        <Rectangle Grid.Row="2" Fill="#FF04A0FF"/>
    </Grid>
</Window>
